  <div class="container mx-auto px-4 py-10 grid md:grid-cols-3 gap-8">
    
    <!-- Column 1: Brand -->
    <div>
      <h2 class="text-xl font-bold text-[#FDB414]">Estarlie</h2>
      <p class="mt-3 text-sm text-gray-400">
        Premium services and solutions tailored for businesses and individuals.
      </p>
    </div>

    <!-- Column 2: Links -->
    <div>
      <h3 class="font-semibold text-white mb-3">Quick Links</h3>
      <ul class="space-y-2 text-sm font-medium">
        <li><a href="/" class="hover:text-[#FDB414]">Home</a></li>
        <li><a href="/about" class="hover:text-[#FDB414]">About</a></li>
        <li><a href="/services" class="hover:text-[#FDB414]">Services</a></li>
        <li><a href="/contact" class="hover:text-[#FDB414]">Contact</a></li>
      </ul>
    </div>

    <!-- Column 3: Social -->
    <div>
      <h3 class="font-semibold text-white mb-3">Follow Us</h3>
