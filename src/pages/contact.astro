---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title='Contact'>

  <!-- HERO -->
  <section class="bg-white py-32">
    <div class="container mx-auto px-4 text-center max-w-2xl">
      <h1 class="text-5xl font-bold text-[#203844]">Contact Us</h1>
      <p class="mt-6 text-xl text-gray-700 leading-relaxed">
        Let's turn you all the way up. Get in touch today!
      </p>
    </div>
  </section>

  <!-- CONTACT INFO + FORM -->
  <section class="bg-[#f9fafb] py-36 border-t border-gray-200">
    <div class="container mx-auto px-4 grid md:grid-cols-2 gap-16 max-w-6xl items-start">
      
      <!-- Contact Info -->
      <div>
        <h2 class="text-3xl font-bold text-[#203844]">Reach Us</h2>
        <div class="mt-6 space-y-6 text-lg text-gray-700 leading-relaxed">
          <p class="flex items-start gap-3">
            ðŸ“ž <span><strong>Telephone:</strong> +254 710 863 271</span>
          </p>
          <p class="flex items-start gap-3">
            ðŸ“§ <span><strong>Email:</strong> info@estarlie.com</span>
          </p>
        </div>
      </div>

      <!-- Contact Form -->
      <div>
        <h2 class="text-3xl font-bold text-[#203844]">Send a Message</h2>
        <form class="mt-8 space-y-5">
          <input
            type="text"
            placeholder="Your Name"
            class="w-full p-4 text-base border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#fdb414]"
          />
          <input
            type="email"
            placeholder="Your Email"
            class="w-full p-4 text-base border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#fdb414]"
          />
          <textarea
            placeholder="Your Message"
            rows="5"
            class="w-full p-4 text-base border border-gray-300 rounded focus:outline-none focus:ring-2 focus:ring-[#fdb414]"
          ></textarea>
          <button
            type="submit"
            class="bg-[#fdb414] text-[#203844] px-8 py-4 rounded-lg font-semibold hover:bg-[#fbbf24] transition text-lg"
          >
            Submit
          </button>
        </form>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-[#203844] text-white py-36 text-center">
    <div class="container mx-auto px-4 max-w-xl">
      <h2 class="text-4xl font-bold leading-snug">We're Ready to Work With You</h2>
      <p class="mt-4 text-lg leading-relaxed">Let's build brands that leave a mark.</p>
      <a
        href="/services"
        class="mt-10 inline-block bg-[#fdb414] text-[#203844] px-8 py-4 rounded-lg font-semibold hover:bg-[#fbbf24] transition text-lg"
      >
        Explore Services
      </a>
    </div>
  </section>

</BaseLayout>
